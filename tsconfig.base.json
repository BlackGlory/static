{
  "compilerOptions": {
    "target": "ES2018"
  , "module": "NodeNext"
  , "moduleResolution": "NodeNext"
  , "strict": true
  , "esModuleInterop": true
  , "skipLibCheck": true
  , "baseUrl": "."
  , "paths": {
      "@src/*": ["src/*"]
    , "@core": ["src/core/index"]
    , "@core/*": ["src/core/*"]
    , "@dao": ["src/dao/index"]
    , "@dao/*": ["src/dao/*"]
    , "@env": ["src/env/index"]
    , "@env/*": ["src/env/*"]
    , "@test/*": ["__tests__/*"]
    , "@services/*": ["src/services/*"]
    }
  , "plugins" : [
      {
        "transform": "typescript-transform-paths"
      , "exclude" : ["**/node_modules/**"]
      }
    , {
        "transform": "typescript-transform-paths", "afterDeclarations": true
      , "exclude" : ["**/node_modules/**"]
      }
    ]
  }
}
