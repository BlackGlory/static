{
  "private": true,
  "name": "static",
  "version": "0.3.0",
  "type": "module",
  "repository": "git@github.com:BlackGlory/static.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prepare": "ts-patch install -s",
    "deduplicate": "yarn-deduplicate",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --no-cache --config jest.config.js",
    "test:debug": "cross-env NODE_OPTIONS=--experimental-vm-modules node --inspect-brk jest --runInBand",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage --config jest.config.js",
    "dev": "nodemon",
    "clean": "rimraf lib dist",
    "build": "tsc --project tsconfig.build.json",
    "bundle": "webpack --stats-error-details",
    "start": "node dist/index.cjs",
    "smoke": "cross-env NODE_ENV=test node dist/index.cjs",
    "docker:build": "docker build --tag static .",
    "docker:test": "run-s docker:test:clean docker:test:build docker:test:run",
    "docker:coverage": "run-s docker:test:clean docker:test:build docker:test:coverage docker:test:clean",
    "docker:test:build": "docker-compose --file docker-compose.test.yml build",
    "docker:test:run": "docker-compose --file docker-compose.test.yml run --rm test",
    "docker:test:coverage": "docker-compose --file docker-compose.test.yml run --rm coverage",
    "docker:test:clean": "docker-compose --file docker-compose.test.yml down",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s clean lint build test bundle smoke",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/http-status": "^1.0.3",
    "@blackglory/jest-resolver": "^0.3.0",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/better-sqlite3": "^7.6.3",
    "@types/content-disposition": "^0.5.5",
    "@types/fontkit": "^2.0.1",
    "@types/jest": "^29.2.4",
    "@types/lodash": "^4.14.191",
    "@types/ms": "^0.7.31",
    "@types/node": "16",
    "@types/sharp": "^0.31.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "extra-fetch": "^4.0.1",
    "extra-request": "^8.1.5",
    "extra-response": "^0.4.0",
    "fontkit": "^2.0.2",
    "husky": "^4.3.8",
    "jest": "^29.3.1",
    "jest-resolve": "^29.3.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^9.1.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-patch": "^2.1.0",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.7.4",
    "typescript-transform-paths": "^3.4.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "yarn-deduplicate": "^6.0.1"
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.16",
    "@blackglory/errors": "^2.4.1",
    "@blackglory/prelude": "^0.2.0",
    "@blackglory/structures": "^0.11.6",
    "@fastify/cors": "^8.2.0",
    "@fastify/static": "^6.6.0",
    "better-sqlite3": "^8.0.1",
    "content-disposition": "^0.5.4",
    "dotenv": "^16.0.3",
    "extra-filesystem": "^0.4.8",
    "extra-lazy": "^1.3.1",
    "extra-promise": "^4.4.0",
    "extra-tags": "^0.3.0",
    "fastify": "^4.10.2",
    "file-type": "^18.0.0",
    "justypes": "^4.0.0",
    "lodash": "^4.17.21",
    "migration-files": "^0.4.0",
    "mrmime": "^1.0.1",
    "return-style": "^1.0.0",
    "semver": "^7.3.8",
    "sharp": "0.31.2",
    "uuid": "^9.0.0",
    "value-getter": "^0.2.4",
    "you-died": "^0.4.2"
  }
}
