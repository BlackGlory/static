{
  "private": true,
  "name": "static",
  "version": "0.2.3",
  "main": "lib/index.js",
  "repository": "git@github.com:BlackGlory/static.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "jest --runInBand --config jest.config.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --runInBand --coverage --config jest.config.js",
    "dev": "nodemon",
    "dev:http2": "cross-env STATIC_HTTP2=true nodemon",
    "clean": "rimraf lib",
    "build": "run-s build:*",
    "build:compile": "tsc --project tsconfig.build.json",
    "build:patch": "tscpaths --project tsconfig.build.json --src ./src --out ./lib",
    "start": "node lib/index.js",
    "start:pm2": "pm2 start lib/index.js --name 'chan' --wait-ready",
    "start:http2": "cross-env STATIC_HTTP2=true node lib/index.js",
    "docker:build": "docker build --tag static .",
    "docker:test": "run-s docker:test:clean docker:test:build docker:test:run",
    "docker:coverage": "run-s docker:test:clean docker:test:build docker:test:coverage docker:test:clean",
    "docker:test:build": "docker-compose --file docker-compose.test.yml build",
    "docker:test:run": "docker-compose --file docker-compose.test.yml run --rm test",
    "docker:test:coverage": "docker-compose --file docker-compose.test.yml run --rm coverage",
    "docker:test:clean": "docker-compose --file docker-compose.test.yml down",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint build test",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/http-status": "^1.0.1",
    "@blackglory/jest-matchers": "^0.2.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/app-root-path": "^1.2.4",
    "@types/better-sqlite3": "^7.4.2",
    "@types/content-disposition": "^0.5.4",
    "@types/fontkit": "^1.8.0",
    "@types/jest": "^27.0.3",
    "@types/lodash.omit": "^4.5.6",
    "@types/ms": "^0.7.31",
    "@types/node": "16",
    "@types/semver": "^7.3.9",
    "@types/sharp": "^0.29.5",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.8.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "extra-fetch": "^1.8.4",
    "extra-request": "^4.0.1",
    "extra-response": "^0.3.8",
    "fontkit": "^1.8.1",
    "husky": "^4.3.8",
    "jest": "^27.4.5",
    "jest-extended": "^1.2.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^7.3.0",
    "pm2": "^5.1.2",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.7",
    "@blackglory/errors": "^1.1.2",
    "@blackglory/go": "^0.1.1",
    "@blackglory/structures": "^0.3.1",
    "@blackglory/types": "^0.6.3",
    "app-root-path": "^3.0.0",
    "better-sqlite3": "^7.4.5",
    "content-disposition": "^0.5.4",
    "dotenv": "^10.0.0",
    "extra-filesystem": "^0.4.0",
    "extra-promise": "^0.20.0",
    "extra-tags": "^0.2.3",
    "fast-json-stable-stringify": "^2.1.0",
    "fastify": "^3.25.0",
    "fastify-cors": "^6.0.2",
    "fastify-metrics": "^8.0.0",
    "fastify-static": "^4.5.0",
    "file-type": "^16.5.3",
    "justypes": "^0.1.6",
    "lodash.omit": "^4.5.0",
    "migrations-file": "^0.2.1",
    "prom-client": "^14.0.1",
    "return-style": "^0.12.5",
    "semver": "^7.3.5",
    "sharp": "^0.29.3",
    "uuid": "^8.3.2",
    "value-getter": "^0.2.1"
  }
}
