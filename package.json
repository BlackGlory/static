{
  "private": true,
  "name": "static",
  "version": "0.1.0",
  "main": "lib/index.js",
  "repository": "git@github.com:BlackGlory/static.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "jest --config jest.config.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage --config jest.config.js",
    "dev": "nodemon",
    "dev:http2": "cross-env STATIC_HTTP2=true nodemon",
    "clean": "rimraf lib",
    "build": "run-s build:*",
    "build:compile": "tsc --project tsconfig.build.json",
    "build:patch": "tscpaths --project tsconfig.build.json --src ./src --out ./lib",
    "start": "node lib/index.js",
    "start:pm2": "pm2 start lib/index.js --name 'chan' --wait-ready",
    "start:http2": "cross-env STATIC_HTTP2=true node lib/index.js",
    "docker:build": "docker build --tag static .",
    "docker:test": "docker-compose --file docker-compose.test.yml run --rm test",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint build test",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@blackglory/http-status": "^1.0.0",
    "@blackglory/jest-matchers": "^0.1.19",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/app-root-path": "^1.2.4",
    "@types/content-disposition": "^0.5.4",
    "@types/jest": "^26.0.24",
    "@types/ms": "^0.7.31",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "extra-fetch": "^1.7.2",
    "extra-request": "^2.1.5",
    "extra-response": "^0.3.5",
    "husky": "^4.3.8",
    "jest": "^27.0.6",
    "jest-extended": "^0.11.5",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^5.1.1",
    "pm2": "^5.1.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "tscpaths": "^0.0.9",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@blackglory/go": "^0.1.0",
    "app-root-path": "^3.0.0",
    "content-disposition": "^0.5.3",
    "dotenv": "^10.0.0",
    "extra-tags": "^0.2.0",
    "fastify": "^3.19.0",
    "fastify-cors": "^6.0.1",
    "fastify-metrics": "^7.2.3",
    "fastify-static": "https://github.com/BlackGlory/fastify-static#master",
    "justypes": "^0.1.5",
    "prom-client": "^13.1.0",
    "value-getter": "^0.2.1"
  }
}
