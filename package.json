{
  "private": true,
  "name": "static",
  "version": "0.2.7",
  "main": "lib/index.js",
  "repository": "git@github.com:BlackGlory/static.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "jest --runInBand --config jest.config.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --runInBand --coverage --config jest.config.js",
    "dev": "nodemon",
    "dev:http2": "cross-env STATIC_HTTP2=true nodemon",
    "clean": "rimraf lib",
    "build": "run-s build:*",
    "build:compile": "tsc --project tsconfig.build.json",
    "build:patch": "tscpaths --project tsconfig.build.json --src ./src --out ./lib",
    "start": "node lib/index.js",
    "start:http2": "cross-env STATIC_HTTP2=true node lib/index.js",
    "docker:build": "docker build --tag static .",
    "docker:test": "run-s docker:test:clean docker:test:build docker:test:run",
    "docker:coverage": "run-s docker:test:clean docker:test:build docker:test:coverage docker:test:clean",
    "docker:test:build": "docker-compose --file docker-compose.test.yml build",
    "docker:test:run": "docker-compose --file docker-compose.test.yml run --rm test",
    "docker:test:coverage": "docker-compose --file docker-compose.test.yml run --rm coverage",
    "docker:test:clean": "docker-compose --file docker-compose.test.yml down",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint build test",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/http-status": "^1.0.1",
    "@blackglory/jest-matchers": "^0.3.1",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/app-root-path": "^1.2.4",
    "@types/better-sqlite3": "^7.5.0",
    "@types/content-disposition": "^0.5.5",
    "@types/fontkit": "^1.8.0",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/ms": "^0.7.31",
    "@types/node": "16",
    "@types/sharp": "^0.30.4",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "extra-fetch": "^1.8.5",
    "extra-request": "^4.0.1",
    "extra-response": "^0.3.11",
    "fontkit": "^1.8.1",
    "husky": "^4.3.8",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^7.6.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.9",
    "@blackglory/errors": "^2.2.1",
    "@blackglory/go": "^1.1.1",
    "@blackglory/structures": "^0.6.0",
    "@blackglory/types": "^1.2.1",
    "app-root-path": "^3.0.0",
    "better-sqlite3": "^7.6.2",
    "content-disposition": "^0.5.4",
    "dotenv": "^16.0.1",
    "extra-filesystem": "^0.4.4",
    "extra-promise": "^2.3.0",
    "extra-semver": "^0.1.0",
    "extra-tags": "^0.2.4",
    "fast-json-stable-stringify": "^2.1.0",
    "fastify": "^3.28.0",
    "fastify-cors": "^6.0.3",
    "fastify-metrics": "^8.0.0",
    "fastify-static": "^4.6.1",
    "file-type": "^16.5.3",
    "justypes": "^2.0.0",
    "lodash": "^4.17.21",
    "migrations-file": "^0.2.2",
    "mrmime": "^1.0.1",
    "prom-client": "^14.0.1",
    "return-style": "^1.0.0",
    "sharp": "0.30.7",
    "uuid": "^8.3.2",
    "value-getter": "^0.2.4"
  }
}
