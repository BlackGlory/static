{
  "private": true,
  "name": "static",
  "version": "0.4.1",
  "type": "module",
  "repository": "git@github.com:BlackGlory/static.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "_prepare": "ts-patch install -s",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --no-cache --config jest.config.js",
    "clean": "rimraf lib dist",
    "build": "tsc --project tsconfig.build.json",
    "bundle": "webpack --stats-error-details",
    "start": "node dist/index.cjs",
    "smoke": "cross-env NODE_ENV=test node dist/index.cjs",
    "docker:build": "docker build --tag static .",
    "docker:test": "run-s docker:test:clean docker:test:build docker:test:run",
    "docker:coverage": "run-s docker:test:clean docker:test:build docker:test:coverage docker:test:clean",
    "docker:test:build": "docker-compose --file docker-compose.test.yml build",
    "docker:test:run": "docker-compose --file docker-compose.test.yml run --rm test",
    "docker:test:coverage": "docker-compose --file docker-compose.test.yml run --rm coverage",
    "docker:test:clean": "docker-compose --file docker-compose.test.yml down",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s _prepare clean lint build test bundle smoke",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/http-status": "^2.0.2",
    "@blackglory/jest-resolver": "^0.3.1",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/content-disposition": "^0.5.8",
    "@types/fontkit": "^2.0.6",
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "@types/ms": "^0.7.34",
    "@types/node": "^18.19.17",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "extra-fetch": "^4.0.7",
    "extra-request": "^8.5.5",
    "extra-response": "^0.5.2",
    "fontkit": "^2.0.2",
    "hotypes": "^0.6.4",
    "husky": "^4.3.8",
    "jest": "^29.7.0",
    "jest-resolve": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.2",
    "ts-patch": "^3.1.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.3",
    "typescript-transform-paths": "^3.4.7",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.18",
    "@blackglory/errors": "^3.0.3",
    "@blackglory/prelude": "^0.3.4",
    "@blackglory/structures": "^0.14.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.1",
    "better-sqlite3": "^9.4.1",
    "content-disposition": "^0.5.4",
    "dotenv": "^16.4.5",
    "extra-exec": "^0.1.3",
    "extra-filesystem": "^0.5.1",
    "extra-lazy": "^2.0.2",
    "extra-promise": "^6.2.0",
    "extra-tags": "^0.4.2",
    "fastify": "^4.26.1",
    "file-type": "^19.0.0",
    "justypes": "^4.2.1",
    "lodash-es": "^4.17.21",
    "migration-files": "^0.4.2",
    "mrmime": "^2.0.0",
    "return-style": "^3.0.1",
    "semver": "^7.6.0",
    "sharp": "0.33.2",
    "uuid": "^9.0.1",
    "value-getter": "^0.3.3",
    "you-died": "^0.4.5"
  }
}
